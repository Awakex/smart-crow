[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 100

[{.babelrc, .stylelintrc, .eslintrc, jest.config, *.bowerrc, *.jsb3, *.jsb2, *.json}]
indent_size = 2

[*.css]
indent_size = 2

[*.js.map]
indent_size = 2

[*.less]
indent_size = 2

[*.scss]
indent_size = 2

[*.sass]
indent_size = 2

[{*.yml, *.yaml}]
indent_size = 2

